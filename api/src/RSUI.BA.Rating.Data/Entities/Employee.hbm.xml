<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="false">
    <class name="RSUI.BA.Rating.Data.Entities.Employee, RSUI.BA.Rating.Data" table="Employee">
    <id name="EmpRecNum" >
      <column name="EMP_RECORD_NUMBER"  sql-type="int" />
    </id>
    <property name="EmpFirstName">
      <column name="EMP_FIRST_NAME" sql-type="varchar"/>
    </property>
    <property name="EmpLastName">
      <column name="EMP_LAST_NAME" sql-type="varchar"/>
    </property>
    <property name="EmpUserProfile">
      <column name="EMP_USER_PROFILE" sql-type="varchar"/>
    </property>
    <property name="Email">
      <column name="EMP_EMAIL_ADDRESS" sql-type="varchar"/>
    </property>
      <many-to-one name="Department" class="RSUI.BA.Rating.Data.Entities.Department,RSUI.BA.Rating.Data" not-null="true">
        <column name="EMP_DEPARTMENT_NUMBER" />
      </many-to-one>


  </class>
</hibernate-mapping>
